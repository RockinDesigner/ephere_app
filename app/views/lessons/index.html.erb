<h1>Lessons</h1>l
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Id</th>
      <th></th>
      <th>Subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.title %></td>
        <td><%= lesson.body %></td>
        <td><%= lesson.subject_id %></td>
        <td></td>
        <td><%= lesson.subject ? lesson.subject.title : "Without subject" %></td>
        <td></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

